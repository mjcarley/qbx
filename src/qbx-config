#!/bin/sh
# src/qbx-config.  Generated from qbx-config.in by configure.

qbx_cflags="-g -O0 -Wall -Werror-implicit-function-declaration -Wstrict-prototypes -Wmissing-prototypes -Wmissing-declarations -fopenmp  -mavx -I/usr/include/glib-2.0 -I/usr/lib64/glib-2.0/include"
qbx_cppflags=""
openmp_cflags="-fopenmp"
glib_libs="@glib_libs@"

prefix=/home/michael/Codes
exec_prefix=${prefix}
includedir=${prefix}/include

single_precision=no

usage()
{
	cat <<EOF
Usage: qbx-config [OPTIONS] [LIBRARIES]
Options:
	[--prefix[=DIR]]
	[--exec-prefix[=DIR]]
	[--version]
	[--libs]
	[--cflags]
Libraries:
	qbx
EOF
	exit $1
}

uniquify()
{
    echo $1 | awk '{
	for (i = 1; i <= NF; i++) {
	    unique = 1;
	    for (j = i + 1; j <= NF && unique; j++)
		if ($i == $j)
		    unique = 0;
            if (unique)
		printf ("%s ", $i);
	}
    }'
}

if test $# -eq 0; then
	usage 1 1>&2
fi

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
        exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo_prefix=yes
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo_exec_prefix=yes
      ;;
    --version)
      echo 0.1.0
      exit 0
      ;;
    --cflags)
      echo_cflags=yes
      ;;
    --libs)
      echo_libs=yes
      ;;
    qbx)
      lib_qbx=yes
      ;;
    *)
      usage 1 1>&2
      ;;
  esac
  shift
done

if test "$echo_prefix" = "yes"; then
	echo $prefix
fi
if test "$echo_exec_prefix" = "yes"; then
	echo $exec_prefix
fi
if test "$echo_cflags" = "yes"; then
    glib_cflags="$glib_cflags -I${prefix}/include"
    glib_cflags=`uniquify "$glib_cflags"`

    qbx_cflags="$qbx_cflags $openmp_cflags -I${prefix}/include"
    qbx_cflags=`uniquify "$qbx_cflags"`
    echo $qbx_cppflags $qbx_cflags $glib_cflags
fi
if test "$echo_libs" = "yes"; then
    glib_libs="-L${exec_prefix}/lib $lib_wmpi  -lglib-2.0  $glib_libs -lm"
    glib_libs=`uniquify "$glib_libs"`

    qbx_libs="-L${exec_prefix}/lib -lqbx  -lglib-2.0  -lm $qbx_libs"
    qbx_libs=`uniquify "$qbx_libs"`
    echo ${qbx_libs}
fi
